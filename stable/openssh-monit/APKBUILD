pkgname=openssh-monit
pkgver=1.0.0
pkgrel=0
pkgdesc="Monit rules for openssh"
url="https://mmonit.com/monit/"
arch="noarch"
license="Apache-2.0"
depends="openssh monit"
options="!check"

source="openssh.monit"

package() {
	install -Dm755 "$srcdir"/openssh.monit "$pkgdir"/etc/monit.d/openssh
}

